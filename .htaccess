RewriteEngine On

# 1. Старые кириллические URL БЕЗ /pages/ → кидаем в translit.php
RewriteRule ^([а-яА-ЯёЁ0-9\-]+)\.html$ /pages/translit.php?old=$1 [L]

# 2. Если кто-то зашёл на /pages/кириллица.html → тоже кидаем в translit.php
RewriteRule ^pages/([а-яА-ЯёЁ0-9\-]+)\.html$ /pages/translit.php?old=$1 [L]

# 3. Если файл физически существует — отдаём его (чтобы новые страницы работали)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]
